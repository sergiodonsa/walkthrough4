<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
        id="helloDialog"
        title="TestoFragment {/recipient/name}">
        <content>
            <core:Icon
                src="sap-icon://camera"
                size="8rem"
                class="sapUiMediumMargin"/>
        </content>
        <beginButton>
            <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
        </beginButton>
   </Dialog>
</core:FragmentDefinition>